<?xml version="1.0" encoding="GB2312"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<context-param>
		<param-name>APP_NUM</param-name>
		<param-value>feedback-bundle</param-value>
	</context-param>
	<context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath:log4j.xml</param-value>
    </context-param>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>feedback-bundle</param-value>
	</context-param>
	<listener>
		<listener-class>com.alibaba.alimonitor.jmonitor.plugin.web.JmonitorServletContextListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>monitorServlet</servlet-name>
		<servlet-class>com.taobao.cun.module.framework.bundle.monitor.MonitorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>monitorServlet</servlet-name>
		<url-pattern>/checkpreload.htm</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>monitorServlet</servlet-name>
		<url-pattern>/monitor/ok.htm</url-pattern>
	</servlet-mapping>
</web-app>
